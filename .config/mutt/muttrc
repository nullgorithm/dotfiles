source /etc/Muttrc.gpg.dist
set crypt_autosign # sign all outgoing messages

set nohelp

set nobeep # don't beep on errors
set beep_new

set folder = imaps://imap.gmail.com/
set imap_user = danielmicay@gmail.com
unset imap_passive
set imap_keepalive = 300
set mail_check = 120
set ssl_force_tls
unset record # gmail already saves sent mail

set spoolfile = +INBOX
mailboxes = +INBOX
set postponed = +[Gmail]/Drafts

set header_cache = ~/.cache/mutt
set message_cachedir = ~/.cache/mutt

set smtp_url = "smtps://danielmicay@smtp.gmail.com:465/"
set from = danielmicay@gmail.com
set realname = "Daniel Micay"

set sort = threads
set sort_aux = reverse-last-date-received

set timeout = 30
